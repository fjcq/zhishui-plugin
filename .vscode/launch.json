{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "WSL Debug",
            "runtimeExecutable": "wsl",
            "runtimeArgs": [
                "run",
                "app"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/../../",
            "env": {
                "NODE_ENV": "development",
                "PATH": "C:/Program Files/nodejs;${env:PATH}" // 添加Node.js安装路径
            }
        }
    ]
}